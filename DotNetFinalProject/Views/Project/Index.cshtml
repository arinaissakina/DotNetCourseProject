@model IEnumerable<DotNetFinalProject.Models.Project>
    @{
        ViewData["Title"] = "Projects";
    }
    <div class="text-center">
        <div>All Projects</div>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create" asp-controller="Project">Create New Project</a>
        }
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Owner</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.Name)</th>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Owner.Name)</td>
                            <td><a asp-action="JoinProject" asp-route-id="@item.Id" asp-controller="Project">Join</a></td>
                           
                        </tr>
                    }

                </tbody>
            </table>
        </div>