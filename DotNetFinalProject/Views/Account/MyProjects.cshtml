@model IEnumerable<DotNetFinalProject.ViewModels.MyProjectsViewModel>
@{
    ViewData["Title"] = "My Projects";
}


<div class="text-center">
    <div>My Projects</div>
  
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Owner</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                <td>@Html.DisplayFor(modelItem => item.ProjectOwner)</td>
                <td><a asp-action="QuitProject" asp-route-id="@item.ProjectId" asp-controller="Project">Quit Project</a></td>
            </tr>
        }

        </tbody>
    </table>
</div>