@using Microsoft.AspNetCore.Identity


@if(User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">@User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form method="post" asp-controller="Account" asp-action="Logout">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
    </li>
}
else
{
    <div class="buttons">
        <a class="button is-light" asp-controller="Account" asp-action="Login">Login</a>
        <a class="button is-primary" asp-controller="Account" asp-action="Register">Register</a>
    </div>
   
}