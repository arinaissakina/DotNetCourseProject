@model IEnumerable<DotNetFinalProject.Models.User>
@{
    ViewBag.Title = "List Of Users";
}
 <br/>
<br/>
<p>
<a class="button is-primary" asp-action="Create">Add User</a>
</p>
 <br/>
<table class="table">
    <tr><th>Email</th><th>Name</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>